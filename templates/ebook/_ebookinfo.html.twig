<div class="relative grid items-center justify-center block w-2/3 p-5 lg:grid-cols-1">
    <div class="text-lg text-center">{{ ebook.title }}</div>
    <div class="mb-2 text-center text-md">{{ ebook.author }}</div>
    {% for category in categories %}
    {% if category.id == ebook.category.id %}
    <div class="mb-2 text-center text-md">Category -> {{ category.name }}</div>
    {% endif %}
    {% endfor %}
    <div class="text-left text-md">Ebook description
        <div class="p-2 my-2 text-sm bg-gray-300 rounded">{{ ebook.description }}</div>
    </div>

    <div class="text-slate-500">
        {% if date(ebook.created) < date('-1year') %} Older than 1 year {% else %} {{ ebook.created|date('d/m/Y') }} {%
            endif %} </div>
            <div class="flex flex-wrap justify-between">
                <div class="py-1">
                    <a class="px-1 text-lg" href="">
                        <button
                            class="w-32 px-2 text-gray-100 border-2 border-gray-400 rounded-full bg-slate-900 hover:bg-slate-800">Like</button>
                    </a>
                    <a class="px-1 text-lg" href="">
                        <button
                            class="w-32 px-2 text-gray-100 border-2 border-gray-400 rounded-full bg-slate-900 hover:bg-slate-800">Dislike</button>
                    </a>
                </div>
                <div class="p-1">
                    Likes <span class="w-auto px-2 text-gray-100 border-gray-400 rounded-full bg-slate-900">1</span>
                    Dislikes <span class="w-auto px-2 text-gray-100 border-gray-400 rounded-full bg-slate-900">0</span>
                </div>
            </div>
    </div>
    <div class="relative grid block w-1/3 px-16 py-5 lg:grid-cols-1">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_ebook_edit', {ebook: ebook.id}) }}">
            <div
                class="py-2 my-2 text-center text-gray-100 border-2 border-gray-400 rounded-full text-md bg-slate-900 hover:bg-slate-800">
                Edit ebook</div>
        </a>
        {% endif %}
    </div>
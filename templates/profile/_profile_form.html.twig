<button
    class="w-full h-12 mt-5 font-semibold text-right text-white border-2 border-gray-400 rounded-full bg-slate-900 w-28 hover:bg-slate-800"
    type="submit">
    <div class="flex items-center justify-center gap-3">
        <span class="text-xl">Submit</span>
    </div>
</button>

{{ form_end(form) }}
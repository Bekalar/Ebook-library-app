{{ form_start(form, {'attr': {'class': 'w-2/3 p-2', 'novalidate': 'novalidate'}}) }}

{# Form name #}
<div>
    {{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-sm mb-2'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'block w-full border border-slate-900 bg-white rounded
    mb-2'}}) }}
    {{ form_errors(form.name) }}
</div>

{# Form bio #}
<div>
    {{ form_label(form.bio, 'Bio', {'label_attr': {'class': 'block text-sm mb-2'}}) }}
    {{ form_widget(form.bio, {'attr': {'class': 'block w-full border border-slate-900 bg-white rounded
    mb-2'}}) }}
    {{ form_errors(form.bio) }}
</div>

{# Form Date of birth #}
<div>
    {{ form_label(form.dateofBirth, 'Date of birth', {'label_attr': {'class': 'block text-sm mb-2'}}) }}
